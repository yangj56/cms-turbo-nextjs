{
  "$schema": "https://turbo.build/schema.json",
  "ui": "stream",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "start": {
      "cache": false,
      "persistent": true
    },
    "generate:types": {
      "cache": false,
      "persistent": true
    },
    "generate:importmap": {
      "cache": false,
      "persistent": true
    }
  },
  "globalEnv": [
    "PAYLOAD_SECRET",
    "MONGODB_URI"
  ]
}
